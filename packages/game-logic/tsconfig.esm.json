{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "declaration": true,
    "emitDeclarationOnly": false,
    "target": "ES2020",
    "lib": ["ES2020"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/__tests__/**", "**/*.test.ts", "**/*.spec.ts"]
}

