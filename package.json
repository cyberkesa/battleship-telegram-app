{
  "name": "battleship-telegram-app",
  "version": "1.0.0",
  "description": "Battleship game as Telegram Mini App",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:packages": "npm run build:shared-types && npm run build:game-logic && npm run build:ui",
    "build:shared-types": "cd packages/shared-types && npm run build",
    "build:game-logic": "cd packages/game-logic && npm run build",
    "build:ui": "cd packages/ui && npm run build",
    "build:webapp": "cd apps/webapp && npm run build",
    "build:vercel": "npm run build:packages && npm run build:webapp",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:generate": "cd apps/api && npm run db:generate",
    "db:migrate": "cd apps/api && npm run db:migrate",
    "db:studio": "cd apps/api && npm run db:studio",
    "build:api": "npm run -w apps/api build",
    "start:prod:migrate": "npm run build:api && cd apps/api && npx prisma migrate deploy && node dist/main.js",
    "start:prod": "npm run build:api && npm run -w apps/api start:prod",
    "deploy:api": "railway up --service $RAILWAY_API_ID --root apps/api",
    "deploy:bot": "railway up --service $RAILWAY_BOT_ID --root apps/bot",
    "migrate:deploy": "cd apps/api && prisma migrate deploy"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
